{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Razvi"
  },
  "description": "A simple Electron & CRA app.",
  "main": "electron/electron.js",
  "homepage": "./",
  "icon": "public/favicon.ico",
  "dependencies": {
    "@apollo/client": "^3.7.9",
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@fontsource/roboto": "^4.5.8",
    "@mui/icons-material": "^5.11.9",
    "@mui/material": "^5.11.10",
    "@nivo/bar": "^0.80.0",
    "@nivo/core": "^0.80.0",
    "@nivo/pie": "^0.80.0",
    "graphql": "^16.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "react-router-dom": "^6.8.1",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^23.1.1",
    "electron-builder": "^23.6.0",
    "electron-is-dev": "^2.0.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.example.electron-cra",
    "directories":{
      "buildResources": "assets"
    },
    "extends": null,
    "files": [
      "node_modules/**/*",
      "dist/**/*",
      "build/**/*",
      "electron/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "private": true,
      "owner": "RazvanCretu"
    },
    "mac": {
      "publish": {
        "provider": "github",
        "owner": "RazvanCretu",
        "repo": "electron-app",
        "private": true,
        "token": "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"
      }
    },
    "win": {
      "publish": {
        "provider": "github",
        "owner": "RazvanCretu",
        "repo": "electron-app",
        "private": true,
        "token": "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"
      }
    }
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently -k \"npm start\" \"npm:electron\"",
    "electron": "wait-on tcp:3000 && set ELECTRON_START_URL=http://localhost:3000 && electron .",
    "package": "electron-builder build --win -c.extraMetadata.main=electron/electron.js --publish never",
    "publish": "electron-builder build --win --publish always"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}

