  "description": "A simple Electron & CRA app.",
  "main": "electron/electron.js",
  "homepage": "./",
  "icon": "public/favicon.ico",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "develeop": "concurrently -k \"npm react-start\" \"npm electron .\"",
    "electron": "wait-on tcp:3000 && set ELECTRON_START_URL=http://localhost:3000 && electron .",
    "electron-package": "electron-builder build --win -c.extraMetadata.main=electron/electron.js --publish never",
    "electron-publish": "electron-builder build --win --config=electron-builder.yaml --publish always"
  },
  "dependencies": {
    "@apollo/client": "^3.7.9",
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@fontsource/roboto": "^4.5.8",
    "@mui/icons-material": "^5.11.9",
    "@mui/material": "^5.11.10",
    "@nivo/bar": "^0.80.0",
    "@nivo/core": "^0.80.0",
    "@nivo/pie": "^0.80.0",
    "electron-is-dev": "^2.0.0",
    "graphql": "^16.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "react-router-dom": "^6.8.1",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^23.1.1",
    "electron-builder": "^23.6.0",
    "wait-on": "^7.0.1"
  },

  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
